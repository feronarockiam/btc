<style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
      background: linear-gradient(to bottom, #e6eaf0, #f5f8fa);
    }
  
    h1 {
      font-size: 24px;
      text-align: center;
      padding: 20px 0;
      color: #333;
    }
  
    h2 {
      color: #229A9C;
    }
  
    table {
      width: 100%;
      border-collapse: collapse;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
      background: #fff;
    }
  
    th,
    td {
      padding: 12px 15px;
      text-align: left;
    }
  
    th {
      background: linear-gradient(to bottom, #6d6d6d, #229A9C);
      color: #fff;
    }
  
    tr:nth-child(even) {
      background-color: #f5f5f5;
    }
  
    tr:hover {
      background-color: #f0f0f0;
    }
  
    .delete-btn {
      background: none;
      border: none;
      cursor: pointer;
    }
  
    .delete-btn svg {
      width: 18px;
      height: 18px;
    }
  </style>
  
  <h1 style="color: #229A9C;">Welcome, Arnauld</h1>
  
  <hr>
  
  <h2 class="submissions">All Submissions:</h2>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Date</th>
        <th>Message</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% submissions.forEach((submission, index) => { %>
      <tr class="<%= index % 2 === 0 ? 'even' : 'odd' %>">
        <td><%= submission.name %></td>
        <td><%= submission.email %></td>
        <td><%= submission.phone %></td>
        <td><%= submission.date %></td>
        <td><%= submission.message %></td>
        <td>
          <form action="/delete/<%= submission._id %>" method="POST">
            <button type="submit" class="delete-btn">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="#00FF00" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-check">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </button>
          </form>                    
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  